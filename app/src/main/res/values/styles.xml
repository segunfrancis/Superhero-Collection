<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.FullWidth</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color1</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ProgressViewStyle">
        <item name="progressView_animation">decelerate</item>
        <item name="progressView_autoAnimate">true</item>
        <item name="progressView_highlightAlpha">500</item>
        <item name="progressView_max">100</item>
        <item name="progressView_min">0</item>
        <item name="progressView_orientation">horizontal</item>
        <item name="progressView_radius">8dp</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GuideLineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.3</item>
    </style>

    <style name="SmallTextKeyStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="SmallTextValueStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
