<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail">

    <com.project.segunfrancis.superherocollection.presesntation.utils.MaxWidthLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="500dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/superHero_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            tools:text="Black Adam" />

        <TextView
            android:id="@+id/superHero_bio_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power Stats" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.project.segunfrancis.customprogress.ArcProgress
                android:id="@+id/combat_progress"
                style="@style/ArcProgress"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:arc_bottom_text="Combat"
                app:arc_finished_color="@color/combat"
                app:arc_text_color="@color/combat"
                app:arc_unfinished_color="@color/combat_unfinished" />

            <com.project.segunfrancis.customprogress.ArcProgress
                android:id="@+id/power_progress"
                style="@style/ArcProgress"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:arc_bottom_text="Power"
                app:arc_finished_color="@color/power"
                app:arc_text_color="@color/power"
                app:arc_unfinished_color="@color/power_unfinished" />

            <com.project.segunfrancis.customprogress.ArcProgress
                android:id="@+id/speed_progress"
                style="@style/ArcProgress"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:arc_bottom_text="Speed"
                app:arc_finished_color="@color/speed"
                app:arc_text_color="@color/speed"
                app:arc_unfinished_color="@color/speed_unfinished" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.project.segunfrancis.customprogress.ArcProgress
                android:id="@+id/intelligence_progress"
                style="@style/ArcProgress"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:arc_bottom_text="Intelligence"
                app:arc_finished_color="@color/intelligence"
                app:arc_text_color="@color/color4"
                app:arc_unfinished_color="@color/intelligence_unfinished" />

            <com.project.segunfrancis.customprogress.ArcProgress
                android:id="@+id/durability_progress"
                style="@style/ArcProgress"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:arc_bottom_text="Durability"
                app:arc_finished_color="@color/durability"
                app:arc_text_color="@color/durability"
                app:arc_unfinished_color="@color/durability_unfinished" />

            <com.project.segunfrancis.customprogress.ArcProgress
                android:id="@+id/strength_progress"
                style="@style/ArcProgress"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:arc_bottom_text="Strength"
                app:arc_finished_color="@color/strength"
                app:arc_text_color="@color/strength"
                app:arc_unfinished_color="@color/strength_unfinished" />
        </LinearLayout>
    </com.project.segunfrancis.superherocollection.presesntation.utils.MaxWidthLinearLayout>
</androidx.core.widget.NestedScrollView>